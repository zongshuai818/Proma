{
  "name": "@proma/electron",
  "version": "0.4.11",
  "description": "Proma next gen ai software with general agents - Electron App",
  "main": "dist/main.cjs",
  "author": {
    "name": "ErlichLiu",
    "email": "erlichliu@gmail.com"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n vite,electron -c blue,green \"bun run dev:vite\" \"bun run dev:electron\"",
    "dev:split": "concurrently -k -n vite,electron -c blue,green --hide 0 \"bun run dev:vite\" \"bun run dev:electron\"",
    "dev:vite": "vite dev",
    "dev:electron": "bun run build:main && bun run build:preload && bun run build:resources && sleep 2 && concurrently -k -n main,preload,app -c yellow,magenta,cyan \"bun run watch:main\" \"bun run watch:preload\" \"bunx electronmon .\"",
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --format=cjs --outfile=dist/main.cjs --external:electron --external:@anthropic-ai/claude-agent-sdk --external:electron-updater",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --format=cjs --outfile=dist/preload.cjs --external:electron",
    "watch:main": "esbuild src/main/index.ts --bundle --platform=node --format=cjs --outfile=dist/main.cjs --external:electron --external:@anthropic-ai/claude-agent-sdk --external:electron-updater --watch=forever",
    "watch:preload": "esbuild src/preload/index.ts --bundle --platform=node --format=cjs --outfile=dist/preload.cjs --external:electron --watch=forever",
    "build:renderer": "vite build",
    "build:resources": "cp -r resources dist/ 2>/dev/null || true",
    "build:vendor": "bun run scripts/download-bun.ts",
    "build:vendor:current": "bun run scripts/download-bun.ts --platform $(node -p \"process.platform + '-' + process.arch\")",
    "build": "bun run build:main && bun run build:preload && bun run build:renderer && bun run build:resources",
    "build:full": "bun run build:vendor && bun run build",
    "start": "bun run build && bunx electron .",
    "typecheck": "tsc --noEmit",
    "generate:icons": "cd resources && ./generate-icons.sh",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:visual": "bun run scripts/dist.ts",
    "dist:fast": "bun run scripts/dist.ts --current-arch --dmg",
    "dist:debug": "bun run scripts/dist.ts --current-arch --verbose"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "0.2.37",
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@proma/core": "workspace:*",
    "@proma/shared": "workspace:*",
    "@proma/ui": "workspace:*",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tiptap/extension-code-block-lowlight": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-underline": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "class-variance-authority": "0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron-updater": "^6.7.3",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.460.0",
    "officeparser": "4.2.0",
    "pdf-parse": "1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.5.5",
    "use-stick-to-bottom": "^1.1.2",
    "word-extractor": "1.0.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.0.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/word-extractor": "1.0.6",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "electron": "^39.5.1",
    "electron-builder": "^25.1.8",
    "electronmon": "^2.0.4",
    "esbuild": "^0.24.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0",
    "vite": "^6.0.3"
  },
  "electronmon": {
    "patterns": ["dist/main.cjs", "dist/preload.cjs"],
    "logLevel": "verbose"
  },
  "build": {
    "extends": "electron-builder.yml"
  },
  "proma": {
    "bun": {
      "version": "1.2.5"
    }
  }
}
